<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.retrofitandroid3.fragments.character.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_character" >
        <action
            android:id="@+id/action_characterFragment_to_getApiDescription"
            app:destination="@id/getApiDescription" />
    </fragment>
    <fragment
        android:id="@+id/getApiDescription"
        android:name="com.example.retrofitandroid3.getapi.GetApiDescription"
        android:label="fragment_get_api_description"
        tools:layout="@layout/fragment_get_api_description" >
        <argument
            android:name="view_model_api"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.retrofitandroid3.fragments.loacations.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" />
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.retrofitandroid3.fragments.episode.EpisodeFragment"
        android:label="fragment_episode"
        tools:layout="@layout/fragment_episode" />
</navigation>